<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2> <%= @course_module.name %></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <strong><%= t('course_modules.description') %></strong>
      <p><%= @course_module.description %></p>
    </div>
  </div>

  <div class="x_panel">
    <div class="x_title">
      <h2><%= t('activerecord.attributes.course_module.video') %></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <iframe id="ytplayer" type="text/html" width="100%" height="390" src='<%= link_to_embed(@course_module.youtube_link) %>?' autoplay=0 frameborder="0"></iframe>
    </div>
  </div>

  <%= render('quizzes_section') if @course_module.multiple_choice? %>
</div>
