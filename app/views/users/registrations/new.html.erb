<div class="sign_up">
<h2><%=t(:signup)%></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div id="field_email_su">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "text_field_email_su" %>
    </div>

    <div id="field_password_su">
    <% if @minimum_password_length %>
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Ingrese ContraseÃ±a (#{@minimum_password_length} caracteres minimos)", class: "text_field_password_su" %>
    </div>

    <div id="field_confirPas_su">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme ContraseÃ±a", class: "text_field_confirPas_su" %>
    </div>

    <%= f.fields_for :person, Person.new do |g| %>
    <div id="field_name_su">
      <%= g.text_field :first_name, autofocus: true, placeholder: "Nombre", class: "text_field_name_su" %>
    </div>

    <div id="field_apellido_su">
      <%= g.text_field :last_name, autofocus: true, placeholder: "Apellido", class: "text_field_apellido_su" %>
    </div>

    <div id="field_prov_su">
      <%= g.label :province_id, 'Province' %>
      <%= g.select :province_id, province_options %>

    <div class="field">
      <%= g.label :dni %><br />
      <%= g.text_field :dni, autofocus: true %>
    </div>
    
    <% end %>

    <div id="actions_sign">
    <%= f.submit "Sign up", class: "btn_sign_up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
