<div class="sign_up">
  <section class="login_content">
    <h1><%=t(:signup)%></h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div id="field_email_su">
        <%= f.email_field :email, autofocus: true, placeholder: true, class: "form-control" %>
      </div>
      <div id="field_password_su">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password_hint', length: @minimum_password_length), class: "form-control" %>
      </div>
      <div id="field_confirPas_su">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: true, class: "form-control" %>
      </div>

      <%= f.fields_for :person, Person.new do |g| %>
      <div id="field_name_su">
        <%= g.text_field :first_name, autofocus: true, placeholder: true, class: "form-control" %>
      </div>
      <div id="field_apellido_su">
        <%= g.text_field :last_name, autofocus: true, placeholder: true, class: "form-control" %>
      </div>
      <div id="field_dni_su">
        <%= g.text_field :dni, autofocus: true, placeholder: true, class: "form-control" %>
      </div>
      <div id="field_prov_su">
        <%= g.label :province_id, t('activerecord.models.province') %>
        <%= g.select :province_id, province_options %>
      </div>
      <% end %>
      <div id="actions_sign">
        <%= f.submit t(:signup), class: "btn btn-default submit" %>
      </div>
      <% end %>
    <%= render "devise/shared/links" %>
    <%= link_to t(:home), root_path %>
  </section>
</div>
