<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= t('courses.title') %><small><%= t('courses.gallery') %></small></h2>
        <div class="links_guests">
          &nbsp; &nbsp;<%= link_to (t(:signup)), new_user_registration_es_path %>
          &nbsp; &nbsp;<%= link_to (t(:login)), new_user_session_path %>
          &nbsp; &nbsp;<%= link_to t(:home), root_path %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div id="title_index">
        <h3>Estos son nuestros cursos que tenemos disponibles para vos <br/> Sumate</h3>
      </div>
      <div>
        <%= form_for :filter, url: guests_courses_path, method: :get do |f| %>
          <div class="x_content">
            <div class="row">
              <% @courses.each do |course| %>
                <div class="col-md-55">
                  <div class="thumbnail">
                    <div class="image view view-first">
                      <%= image_tag( course.image.url(:original), alt: 'image', style: 'width: 100%; height: 100%; display: block;' ) %>
                      <div class="mask">
                        <p><%= course.name %></p>
                        <p>Inicia<br/><%= course.start_date %></p>
                      </div>
                    </div>
                    <div class="caption">
                      <p><strong><%= course.name %></strong></p>
                      <%= link_to t(:show), guests_course_path(course), class: "btn btn-primary btn-xs" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
