<div class="index_courses">
  <p id="notice"><%= notice %></p>

  <h1>Courses</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Number resolution</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.no_resolution %></td>
          <td><%= link_to 'Show', course %></td>
          <% if current_user.role.name == 'Admin' %>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <% end -%>
          <% if current_user.role.name == 'Teacher' %>
            <td><%= link_to 'Add Module', new_course_course_module_path(course) %></td>
            <td><%= link_to 'List Modules', course_course_modules_path(course) %></td>
          <% end -%>
          <!-- <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <tr>
    <% if current_user.role.name == 'Admin' %>
      <td><%= link_to 'New Course', new_course_path, class: "new_course" %></td>
    <% end -%>
    <td><%= link_to 'Back', root_path, class: "back" %></td>
  </tr>
</div>
