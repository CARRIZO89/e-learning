                            <img style="width: 100%; height: 100%; display: block;" src="<%=image_url(course.image.url(:original))%>" alt="image">
                            <div class="mask">
                              <p><%= course.name %></p>
                              <p>Inicia<br/><%= course.start_date %></p>
                            </div>
                          </div>
                          <div class="caption">
                            <p><strong><%= course.name %></strong></p>
                            <%= link_to t(:show), course, class: "btn btn-primary btn-xs" %>
                          </div>
                        </div>
                      </div>
                     <% end %>
                    </div>
                  </div>
                </div>
