<div class="index_courses">
  <p id="notice"><%= notice %></p>

  <h1>Lista de Cursos</h1>
  <hr/>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Start Date</th>
        <th>Modality</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.start_date %></td>
          <td><%= course.modality.name %></td>
          <td><%= link_to t(:show), course, class: "btn_show" %></td>
          <% if current_user.role.name == 'Admin' %>
            <td><%= link_to t(:edit), edit_course_path(course), class: "btn_edit" %></td>
          <% end -%>
          <% if current_user.role.name == 'Teacher' %>
            <td><%= link_to 'Add Modules', new_course_course_module_path(course) %></td>
            <td><%= link_to 'List Modules', course_course_modules_path(course) %></td>
          <% end -%>
               

          <!-- <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <tr>
    <% if current_user.role.name == 'Admin' %>
      <td><%= link_to 'New Course', new_course_path, class: "btn_new_course-ic" %></td>
    <% end -%>
    <td><%= link_to t(:back), root_path, class: "btn_back-ic" %></td>
  </tr>
</div>
