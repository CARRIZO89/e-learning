<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.description %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_quiz_question_path(:quiz_id, question) %></td>
        <td><%= link_to 'Add Answer', new_question_answer_path(question) %></td>
        <td><%= link_to 'List Answers', question_answers_path(question) %></td>
        <!-- <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<tr>
  <td><%= link_to 'New Question', new_quiz_question_path %></td>
  <td><%= link_to 'Back', course_module_quizzes_path(@quiz.course_module) %></td>
