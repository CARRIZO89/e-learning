<div class="animate form login_form">
  <section class="login_content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1><%= t( :login_form )%></h1>
    <div id="email">
        <%= f.email_field :email, autofocus: true, placeholder: true, class: "form-control" %>
    </div>
    <div id="password">
        <%= f.password_field :password, autocomplete: "off", placeholder: true, class: "form-control"%>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "check_box"%>
      <%= f.label :remember_me %>
    </div>
    <% end -%>
    
    <div class="actions_log">
      <%= f.submit t(:login), class: "btn btn-default submit" %>
    </div>
    <% end %>
  </section>
  <div class="links">
    <%= render "devise/shared/links" %>
    <%= link_to t(:home), root_path %>
  </div>
</div>
