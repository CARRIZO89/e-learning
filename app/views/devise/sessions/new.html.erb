<div class="log_User">

<div class="animate form login_form">
          <section class="login_content">
              <h1>Login Form</h1>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div id="email">
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "text_email" %>
              </div>
              <div id="password">
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "text_password"%>
              </div>

              <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me, class: "check_box"%>
                <%= f.label :remember_me %>
              </div>
              <% end -%>
              
              <div class="actions">
                <%= f.submit "Log in" %>
              </div>
              <% end %>

       <%= render "devise/shared/links" %>
</div>