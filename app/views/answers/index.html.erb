<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Right</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.description %></td>
        <td><%= answer.right %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(:question_id, answer) %></td>
        <!-- <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<tr>
  <td><%= link_to 'New Answer', new_question_answer_path %></td>
  <td><%= link_to 'Back', quiz_questions_path(@question.quiz) %></td>
</tr>
